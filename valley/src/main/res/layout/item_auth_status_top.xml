<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

    <com.hn.d.valley.widget.HnGlideImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/zhanweitu_1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_view"
        android:orientation="vertical"
        android:paddingBottom="@dimen/base_xhdpi"
        android:paddingTop="@dimen/base_40dpi">

        <com.angcyo.uiview.widget.RTextView
            android:id="@+id/name_view"
            style="@style/MainTextStyle"
            android:layout_gravity="center_horizontal"
            tools:text="马云"/>

        <com.angcyo.uiview.widget.RTextView
            android:id="@+id/job_view"
            style="@style/DarkTextStyle"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/base_xhdpi"
            tools:text="阿里巴巴网络技术有限公司"/>

    </LinearLayout>

    <com.hn.d.valley.widget.HnGlideImageView
        android:id="@+id/avatar_view"
        android:layout_width="@dimen/avatar_image_size"
        android:layout_height="@dimen/avatar_image_size"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        android:contentDescription="@string/is_circle"
        android:src="@drawable/default_avatar"/>

    <com.hn.d.valley.widget.HnAuthStatusView
        android:id="@+id/status_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/base_xxxhdpi"
        android:layout_marginTop="220dp"
        android:contentDescription="@string/is_circle"
        android:src="@drawable/authentication"/>

</RelativeLayout>