<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_40dpi"
                android:background="@color/chat_bg_color">

    <com.angcyo.uiview.github.tablayout.SlidingTabLayout
        android:id="@+id/slid_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingEnd="@dimen/base_40dpi"
        app:tl_indicator_height="0dp"
        app:tl_tab_padding="@dimen/base_hdpi"
        app:tl_textSelectColor="@color/nav_text_color_press"
        app:tl_textUnselectColor="@color/nav_text_color"
        app:tl_textsize="@dimen/default_text_size"
        app:tl_underline_height="0dp"/>

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="@dimen/base_40dpi"
        android:layout_height="@dimen/base_40dpi"
        android:layout_alignParentEnd="true"
        android:background="#99FFFFFF"
        android:padding="@dimen/base_mdpi"
        android:scaleType="centerInside"
        android:src="@drawable/add_tags_selector"/>

</RelativeLayout>