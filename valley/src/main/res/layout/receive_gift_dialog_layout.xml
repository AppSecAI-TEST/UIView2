<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:passcodeView="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_shine"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent">
        <ImageView
            tools:src="@drawable/longbi_80"
            android:id="@+id/iv_gift_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_tip_anim"
            style="@style/WhiteColorTextStyle"
            android:layout_margin="@dimen/base_xhdpi"
            tools:text="送你一个呵呵大"
            android:gravity="center"
            android:background="@drawable/jianbiandise_songliwu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.hn.d.valley.widget.NumberAnimTextView
            android:id="@+id/tv_charm"
            tools:text="魅力值: +10"
            android:textColor="@color/yellow_ffac2d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>




</RelativeLayout>
