<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/msg_card_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_marginEnd="@dimen/base_xhdpi"
    android:layoutDirection="ltr"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/base_xhdpi"
        android:paddingBottom="@dimen/base_xhdpi"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!--<ImageView-->
            <!--android:id="@+id/iv_item_head"-->
            <!--android:layout_width="@dimen/base_50dpi"-->
            <!--android:layout_height="@dimen/base_65dpi"-->
            <!--android:layout_marginStart="@dimen/base_xhdpi"-->
            <!--android:contentDescription="@string/is_circle"-->
            <!--android:scaleType="centerCrop"-->
            <!--android:src="@drawable/image_hongbao_small" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/base_50dpi"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_red_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/default_text_size"
                android:layout_marginStart="@dimen/base_xhdpi"
                android:gravity="center_vertical"
                tools:text="@string/about_me" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/base_xhdpi"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:text="@string/text_check_redbag" />

        </LinearLayout>


    </LinearLayout>


    <!--<include layout="@layout/item_divider_line" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_pc_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/base_xhdpi"
            android:layout_weight="1"
            android:paddingLeft="@dimen/base_ldpi"
            android:paddingRight="@dimen/base_ldpi"
            android:paddingTop="6dp"
            android:text="@string/text_klg_redpacket"
            android:textColor="@color/main_text_color_dark" />

    </LinearLayout>


</LinearLayout>
