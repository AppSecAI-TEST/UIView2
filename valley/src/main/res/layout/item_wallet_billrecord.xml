<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_root_layout"
    android:background="@drawable/base_bg_selector"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/base_xhdpi">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_bill_type"
            style="@style/SingleDarkTextStyle"
            tools:text="红包" />


        <TextView
            android:id="@+id/tv_time"
            android:layout_marginTop="@dimen/base_xhdpi"
            tools:text="4:00"
            style="@style/SingleDarkTextStyle"
            />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_bill_moncy"
        tools:text="+ 22"
        style="@style/DarkTextStyle"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
