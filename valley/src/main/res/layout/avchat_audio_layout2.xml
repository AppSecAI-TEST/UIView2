<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a282a21">


    <ImageView
        android:id="@+id/iv_preview_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="#1a282a21"
        android:scaleType="fitXY"
        android:shadowDy="1"
        android:src="@drawable/avchat_call_bg"
        android:shadowRadius="1"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/iv_avaudio_scale"
        android:padding="@dimen/base_xxxhdpi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#1a282a21"
        android:src="@drawable/fangdasuoxiao_shipingliaotian"
        />

    <LinearLayout
        android:id="@+id/ll_avaudio_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="140dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="visible">

        <com.hn.d.valley.widget.HnGlideImageView
            android:id="@+id/iv_aaaudic_head"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:minHeight="75dp"
            android:minWidth="75dp"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:contentDescription="@string/is_circle2"
            android:src="@drawable/default_avatar" />

        <TextView
            android:id="@+id/tv_avaudio_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25px"
             />

        <TextView
            android:id="@+id/tv_avaudio_notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25px"
             />

    </LinearLayout>



    <include
        android:id="@+id/audio_call_bottom_switch_layout"
        layout="@layout/audio_call_bottom_switch_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />


</RelativeLayout>