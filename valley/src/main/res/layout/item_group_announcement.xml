<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/base_25dpi"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_time_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/base_ldpi"
        android:background="@drawable/base_dark2_round_selector"
        android:paddingBottom="@dimen/base_ldpi"
        android:paddingEnd="@dimen/base_xhdpi"
        android:paddingStart="@dimen/base_xhdpi"
        android:paddingTop="@dimen/base_ldpi"
        android:textColor="@android:color/white"
        tools:text="上午 19:90"/>

    <RelativeLayout
        android:id="@+id/rl_content"
        android:background="@drawable/base_white_round_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/base_xhdpi_15"
        android:gravity="center"
        android:layout_below="@id/tv_time_view"
        android:padding="@dimen/base_xhdpi_15"
        android:layout_marginLeft="@dimen/base_xhdpi"
        android:layout_marginRight="@dimen/base_xhdpi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_announcement_desc"
            tools:text="群公告啊"
            style="@style/DarkTextStyle"
            android:textColor="@color/main_text_color_dark2"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>