<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.angcyo.uiview.widget.TitleBarLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:background="@color/theme_color_primary"
        android:paddingBottom="@dimen/base_hdpi">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/base_xhdpi"
            android:paddingStart="@dimen/base_xhdpi">

            <com.angcyo.uiview.widget.ExEditText
                android:id="@+id/edit_text_view"
                style="@style/BaseEditStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/base_dark_round_selector_dark"
                android:hint="@string/search"
                android:imeOptions="actionSearch"
                android:paddingBottom="0dp"
                android:paddingEnd="@dimen/base_hdpi"
                android:paddingStart="@dimen/base_hdpi"
                android:paddingTop="0dp"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/default_text_little_size">

                <requestFocus/>
            </com.angcyo.uiview.widget.ExEditText>

            <com.angcyo.uiview.widget.RTextView
                android:id="@+id/cancel_view"
                style="@style/DarkTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/base_xhdpi"
                android:background="@drawable/base_bg2_selector"
                android:clickable="true"
                android:text="@string/base_cancel"
                android:textColor="@color/default_base_white"/>

        </LinearLayout>

    </com.angcyo.uiview.widget.TitleBarLayout>

    <com.angcyo.uiview.rsen.RefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.angcyo.uiview.rsen.PlaceholderView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="top_view"/>

        <com.angcyo.uiview.recycler.RRecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:tag="target_view"/>

    </com.angcyo.uiview.rsen.RefreshLayout>

</LinearLayout>