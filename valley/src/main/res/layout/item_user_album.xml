<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/base_xhdpi"
    android:background="@drawable/base_white_bg_selector"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_timeline"
        style="@style/DarkTextStyle"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_xhdpi"
        android:textColor="@color/base_text_color"
        android:text="12/2017"
        android:textSize="@dimen/default_text_size" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_xhdpi"
        android:layout_marginBottom="@dimen/base_xhdpi"
        android:gravity="center_vertical">

        <com.angcyo.uiview.recycler.RRecyclerView
            android:id="@+id/rv_album_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>