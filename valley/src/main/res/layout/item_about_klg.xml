<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logo_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/base_ldpi"
        android:layout_marginTop="@dimen/base_xxhdpi"
        android:src="@drawable/logo"/>

    <TextView
        style="@style/MainTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_xhdpi"
        android:text="@string/app_name"
        android:textSize="15sp"/>

    <com.angcyo.uiview.widget.RTextView
        android:id="@+id/version_name_view"
        style="@style/DarkTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_ldpi"
        android:tag="V%1$S"
        android:textSize="12sp"
        tools:text="1.5"/>

    <com.angcyo.uiview.widget.ItemInfoLayout
        android:id="@+id/user_agreement_view"
        style="@style/BaseItemInfoStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_item_size"
        android:layout_marginTop="@dimen/base_xxhdpi"
        app:item_text="@string/user_agreement"/>

    <com.angcyo.uiview.widget.ItemInfoLayout
        android:id="@+id/maker_to_layout"
        style="@style/BaseItemInfoStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_item_size"
        android:layout_marginTop="@dimen/base_xhdpi"
        app:item_text="@string/jump_to_maker"/>

    <com.angcyo.uiview.widget.ItemInfoLayout
        android:id="@+id/call_to_layout"
        style="@style/BaseItemInfoStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_item_size"
        android:layout_marginTop="@dimen/base_xhdpi"
        app:item_dark_text="0755-26777170"
        app:item_text="@string/call_to"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_line"
        android:background="@color/base_white"
        android:paddingStart="@dimen/base_xhdpi"/>

    <com.angcyo.uiview.widget.ItemInfoLayout
        android:id="@+id/email_to_layout"
        style="@style/BaseItemInfoStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_item_size"
        app:item_dark_text="support@konglonggu.com"
        app:item_text="@string/email_to"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <com.angcyo.uiview.widget.RTextView
        style="@style/DarkTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_xhdpi"
        android:padding="@dimen/base_xhdpi"
        android:text="@string/about_klg_copyright"
        android:textSize="12sp"/>
</LinearLayout>