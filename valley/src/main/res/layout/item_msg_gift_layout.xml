<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/base_bg_selector"
    android:gravity="center_vertical"
    android:layout_marginStart="@dimen/base_xhdpi"
    android:orientation="horizontal"
    >

    <com.angcyo.uiview.widget.RTextView
        android:id="@+id/iv_icon"
        style="@style/MainTextStyle"
        android:layout_marginEnd="@dimen/avatar_image_size"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/register_warning" />

    <com.hn.d.valley.widget.HnGlideImageView
        android:layout_alignParentEnd="true"
        android:id="@+id/iv_gift_thumb"
        tools:src="@drawable/add_black"
        android:layout_marginStart="@dimen/base_xhdpi"
        android:layout_width="@dimen/avatar_image_size"
        android:maxHeight="@dimen/avatar_image_size"
        android:maxWidth="@dimen/avatar_image_size"
        android:layout_height="@dimen/avatar_image_size" />

</RelativeLayout>