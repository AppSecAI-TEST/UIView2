<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/item_single_main_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/default_base_white"
        android:orientation="vertical"
        android:padding="@dimen/base_xhdpi"
    >


        <TextView
            android:text="@string/text_balance_more_zero"
            android:id="@+id/recent_name_view"
            style="@style/NameTextStyle" />

        <TextView
            android:text="@string/text_can_pay_and_withdraw"
            android:id="@+id/msg_content_view"
            style="@style/SingleDarkTextStyle"
            android:layout_marginTop="@dimen/base_ldpi" />


    </LinearLayout>

</LinearLayout>