<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <com.angcyo.uiview.widget.RTextView
        android:id="@+id/tip_view"
        style="@style/MainTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/base_xhdpi"/>

    <View
        android:id="@+id/relation_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_line"
        android:layout_marginStart="@dimen/base_xhdpi"
        android:background="@color/line_color"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/relation_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/base_item_size"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/base_xhdpi"
        android:paddingStart="@dimen/base_xhdpi"
        android:paddingTop="@dimen/base_xhdpi"
        android:visibility="gone">

        <TextView
            style="@style/MainTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/relation"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="vertical">

            <com.hn.d.valley.widget.HnIcoRecyclerView
                android:id="@+id/ico_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.angcyo.uiview.widget.RTextView
                android:id="@+id/relation_count_view"
                style="@style/DarkTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="@string/relation_count_format"
                android:text="6"/>
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_line"
        android:layout_marginStart="@dimen/base_xhdpi"
        android:background="@color/line_color"/>

    <com.angcyo.uiview.widget.ItemSubInfoLayout
        android:id="@+id/id_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/base_xhdpi"
        app:item_text="@string/id"
        tools:item_dark_text="888888"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_line"
        android:layout_marginStart="@dimen/base_xhdpi"
        android:background="@color/line_color"/>

    <!--年龄-->
    <com.angcyo.uiview.widget.ItemSubInfoLayout
        android:id="@+id/birthday_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/base_xhdpi"
        app:item_text="@string/birthday"
        tools:item_dark_text="保密"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_line"
        android:layout_marginStart="@dimen/base_xhdpi"
        android:background="@color/line_color"/>

    <com.angcyo.uiview.widget.ItemSubInfoLayout
        android:id="@+id/address_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/base_xhdpi"
        app:item_text="@string/address"
        tools:item_dark_text="广东 深圳"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_line"
        android:layout_marginStart="@dimen/base_xhdpi"
        android:background="@color/line_color"/>

    <com.angcyo.uiview.widget.ItemSubInfoLayout
        android:id="@+id/signature_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/base_xhdpi"
        app:item_text="@string/signature"
        tools:item_dark_text="保密保密保密保密保密保密保密保密保密保密"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_line"
        android:layout_marginStart="@dimen/base_xhdpi"
        android:background="@color/line_color"/>

    <com.angcyo.uiview.widget.RTextView
        android:id="@+id/more_info_view"
        style="@style/DarkTextStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_button_height"
        android:background="@drawable/base_bg_selector"
        android:gravity="center"
        android:text="@string/more_info_tip"/>

</LinearLayout>