<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.angcyo.uiview.github.tablayout.SlidingTabLayout
        android:id="@+id/slid_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_40dpi"
        android:background="@color/chat_bg_color"
        app:tl_indicator_height="0dp"
        app:tl_textSelectColor="@color/nav_text_color_press"
        app:tl_textUnselectColor="@color/nav_text_color"
        app:tl_textsize="@dimen/default_text_size"
        app:tl_underline_height="0dp"/>

    <com.angcyo.uiview.widget.viewpager.UIViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>