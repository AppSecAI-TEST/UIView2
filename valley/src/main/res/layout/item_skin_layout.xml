<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/base_bg_selector">

    <com.hn.d.valley.widget.HnView
        android:id="@+id/skin_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/base_xhdpi"
        tools:background="@color/base_chat_bg_color"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/skin_view"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.angcyo.uiview.widget.RTextView
            android:id="@+id/text_view"
            style="@style/MainTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="测试"/>

        <com.angcyo.uiview.widget.RTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/base_ldpi"
            android:background="@drawable/free_color_round_shape"
            android:padding="@dimen/base_dpi"
            android:text="@string/free"
            android:textColor="@color/default_base_white"
            android:textSize="@dimen/default_text_size9"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/check_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/base_ldpi"
        android:src="@drawable/gouxuan_gexingzhuangban"
        android:visibility="gone"/>
</RelativeLayout>