<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layoutAnimation="@anim/base_layout_rotate"
        android:orientation="horizontal">

        <Space
            android:layout_width="1dp"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/image_view"
            style="@style/WhiteColorTextButtonStyle2"
            android:drawableTop="@drawable/pic_release_selector"
            android:text="@string/image"/>

        <Space
            android:layout_width="@dimen/base_100dpi"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/video_view"
            style="@style/WhiteColorTextButtonStyle2"
            android:drawableTop="@drawable/video_release_selector"
            android:text="@string/video"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/cancel_view"
        style="@style/WhiteColorTextButtonStyle2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/base_xxhdpi"
        android:padding="@dimen/base_xhdpi"
        android:src="@drawable/cancel"/>

</RelativeLayout>