<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="205dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/base_ldpi"
    android:paddingLeft="@dimen/base_xhdpi"
    android:paddingRight="@dimen/base_xhdpi"
    android:paddingBottom="@dimen/base_xhdpi"
    tools:background="@android:color/darker_gray">

    <TextView
        android:id="@+id/msg_text_view"
        style="@style/MainTextStyle"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="1231242"/>

    <com.hn.d.valley.widget.HnGlideImageView
        android:id="@+id/msg_image_view"
        android:layout_marginTop="@dimen/base_ldpi"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_120dpi"
        android:scaleType="fitXY"
        android:src="@drawable/zhanweitu_1" />

</LinearLayout>
