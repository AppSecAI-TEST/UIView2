<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_base_white"
    android:gravity="center_horizontal"
    >

    <ImageView
        android:id="@+id/iv_edge"
        android:src="@drawable/image_hongbao_edge"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="wrap_content"/>

    <com.hn.d.valley.widget.HnGlideImageView
        android:id="@+id/iv_icon_head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/base_xxxhdpi"
        android:layout_width="@dimen/base_65dpi"
        android:layout_height="@dimen/base_65dpi"
        android:contentDescription="@string/is_circle"
        android:src="@drawable/default_avatar" />

    <TextView
        android:id="@+id/tv_username"
        android:layout_below="@id/iv_icon_head"
        android:textSize="@dimen/default_text_size18"
        android:textColor="@color/main_text_color"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/base_xhdpi_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Eric 的红包"
        />

    <TextView
        android:id="@+id/tv_tip"
        android:layout_below="@id/tv_username"
        android:textSize="@dimen/default_text_little_size"
        android:textColor="@color/main_text_color_dark"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/base_xhdpi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="恭喜发财，大吉大利"
        />

    <com.angcyo.uiview.widget.ExEditText
        android:id="@+id/tv_money"
        android:layout_below="@id/tv_tip"
        android:textSize="@dimen/default_text_size50"
        android:tag="hide"
        android:textColor="@color/main_text_color"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/base_40dpi"
        android:inputType="numberDecimal"
        android:imeOptions="actionDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="50.00元"
        />

    <TextView
        android:id="@+id/tv_refresh"
        android:layout_marginTop="26dp"
        android:text="元"
        android:textSize="25sp"
        android:drawableEnd="@drawable/gengxing"
        android:textColor="@color/black"
        android:drawablePadding="@dimen/base_ldpi"
        android:layout_width="wrap_content"
        android:background="@null"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_money"
        android:layout_toEndOf="@+id/tv_money"
        android:layout_marginStart="10dp" />


    <ImageView
        android:id="@+id/tv_status"
        android:src="@drawable/button_dashanghongbao"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

