<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:paddingTop="@dimen/base_xhdpi"
    android:paddingBottom="@dimen/base_xhdpi"
    android:layout_gravity="center_vertical"
    android:background="@drawable/base_bg_selector"
    android:orientation="horizontal"
    tools:background="@android:color/darker_gray">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="@dimen/base_75dpi"
        android:layout_height="@dimen/base_55dpi"
        android:scaleType="fitXY"
        android:src="@drawable/zhanweitu_1" />

    <TextView
        android:id="@+id/tv_desc"
        style="@style/MainTextStyle"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:maxLines="2"
        android:layout_marginStart="@dimen/base_ldpi"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        tools:text="测试文本测试文本测试文本测试文本测试文本测试文本测试文本测试文本测试文本测试文本测试文本测试文本测试文本测试文本测试文本" />


</LinearLayout>
