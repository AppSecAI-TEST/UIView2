<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:padding="@dimen/base_xhdpi">

    <TextView
        android:id="@+id/tip_text_view"
        style="@style/DarkTextStyle"
        android:layout_marginStart="@dimen/base_hdpi"
        tools:text="确认新密码:"/>

    <com.hn.d.valley.widget.HnEditText
        android:id="@+id/edit_text_view"
        style="@style/PasswordEditStyle"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/base_main_color_border_selector"
        android:drawablePadding="@dimen/base_80dpi"
        android:paddingEnd="@dimen/base_40dpi"
        android:paddingStart="@dimen/base_90dpi"
        android:textColor="@color/main_text_color"
        android:textColorHint="@color/main_text_color_dark"/>

    <com.hn.d.valley.widget.HnPasswordSeeBox
        android:id="@+id/show_password_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/base_ldpi"
        android:button="@drawable/password_zhuce_checkbox_selector"
        android:contentDescription="register"/>
</RelativeLayout>
