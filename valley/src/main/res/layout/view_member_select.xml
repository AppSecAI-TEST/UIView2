<?xml version="1.0" encoding="utf-8"?>
<com.angcyo.uiview.widget.SoftRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hn.d.valley.widget.HnRefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.angcyo.uiview.recycler.RRecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.angcyo.uiview.recycler.RRecyclerView>
    </com.hn.d.valley.widget.HnRefreshLayout>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_item_size"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:background="@color/chat_bg_color"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_selected"
            android:layout_width="0dp"
            style="@style/DarkTextStyle"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            tools:text="已选中5人" />

        <com.hn.d.valley.widget.HnButton
            android:id="@+id/btn_send"
            style="@style/WhiteColorTextStyle"
            android:layout_width="@dimen/base_60dpi"
            android:layout_height="match_parent"
            android:gravity="center"
            android:minHeight="@dimen/base_item_size"
            android:text="@string/delete_text" />
    </LinearLayout>
</com.angcyo.uiview.widget.SoftRelativeLayout>