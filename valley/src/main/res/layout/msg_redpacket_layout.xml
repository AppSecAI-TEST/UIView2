<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_red_packet"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layoutDirection="ltr"
    tools:background="@android:color/darker_gray">

    <ImageView
        android:id="@+id/msg_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/empty"
        android:src="@drawable/image_hongbao_small"
        android:gravity="center"
        android:padding="0dip"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_red_content"
        android:layout_marginStart="@dimen/base_xhdpi"
        android:layout_marginEnd="@dimen/base_xhdpi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/yellow_ffe2b1"
        android:text="day day "
        android:visibility="visible" />

</RelativeLayout>
