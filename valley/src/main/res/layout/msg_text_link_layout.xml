<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    android:paddingLeft="@dimen/base_mdpi"
    android:paddingRight="@dimen/base_mdpi">

    <RelativeLayout
        android:id="@+id/link_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:padding="5dp">

        <ImageView
            android:id="@+id/share_image"
            android:src="@drawable/rc_ic_def_rich_content"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/share_cotent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/share_image"
            android:layout_marginStart="@dimen/base_ldpi"
            android:textColor="@color/main_text_color"
            android:ellipsize="end"
            tools:text="@string/about_me"
            android:lines="1"
            />
        <TextView
            android:id="@+id/tv_link_content"
            style="@style/DarkTextStyle"
            android:layout_toEndOf="@id/share_image"
            android:layout_marginStart="@dimen/base_ldpi"
            android:ellipsize="end"
            tools:text="aaaaaaa"
            android:lines="1"
            />


    </RelativeLayout>

</LinearLayout>