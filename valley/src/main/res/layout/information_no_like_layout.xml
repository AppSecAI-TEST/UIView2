<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/base_xhdpi"
    android:layout_marginStart="@dimen/base_xhdpi"
    android:background="@drawable/base_white_round_little_shape"
    android:orientation="vertical"
    android:padding="@dimen/base_xhdpi">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/MainTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_like_tip"/>

        <com.angcyo.uiview.widget.Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/base_xxxhdpi"
            android:layout_alignParentEnd="true"
            android:paddingBottom="@dimen/base_mdpi"
            android:paddingEnd="@dimen/base_xhdpi"
            android:paddingStart="@dimen/base_xhdpi"
            android:paddingTop="@dimen/base_mdpi"
            android:text="@string/no_like"/>

    </RelativeLayout>

    <com.angcyo.uiview.widget.RFlowLayout
        android:id="@+id/flow_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_xxhdpi"/>

</LinearLayout>